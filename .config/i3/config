# Pulse Audio
exec --no-startup-id start-pulseaudio-x11

# Pulse Audio controls
bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume $sink +2% && pkill -RTMIN+10 i3blocks #increase sound volume
bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume $sink -2% && pkill -RTMIN+10 i3blocks #decrease sound volume
bindsym XF86AudioMute exec --no-startup-id pactl set-sink-mute $sink toggle && pkill -RTMIN+10 i3blocks # mute sound

# Media player controls
bindsym XF86AudioPlay exec playerctl play-pause
bindsym XF86AudioPause exec playerctl pause
bindsym XF86AudioNext exec playerctl next
bindsym XF86AudioPrev exec playerctl previous

# Screen brightness controls
bindsym XF86MonBrightnessUp exec xbacklight -ctrl intel_backlight -inc 5 # increase 
bindsym XF86MonBrightnessDown exec xbacklight -ctrl intel_backlight -dec 5 # decrease

# Keyboard backlight config
bindsym XF86KbdBrightnessUp exec xbacklight -ctrl smc::kbd_backlight -inc 15
bindsym XF86KbdBrightnessDown exec xbacklight -ctrl smc::kbd_backlight -dec 15

# Screenshots
