## Manual management of external displays
# Set the shortcuts and what they do
#set $mode_display Ext Screen (h) HDMI ON, (x) HDMI OFF,(t) TB1 ON, (y) TB1 OFF, (m) eDP ON, (z) eDP OFF, (q) TB2 ON, (w) TB2 OFF
set $mode_display Ext Screen (h) HDMI ON, (x) HDMI OFF
mode "$mode_display" {
    bindsym h exec --no-startup-id xrandr --output $output --above eDP-1 --mode 1920x1080
    bindsym x exec --no-startup-id xrandr --output $output --auto --off && pulseaudio --kill && sleep 1 && pulseaudio --start

    # Back to normal: Enter or Escape
    bindsym Return mode "default"
    bindsym Escape mode "default"
}
# Declare here the shortcut to bring the display selection menu
bindsym $mod+x mode "$mode_display"

